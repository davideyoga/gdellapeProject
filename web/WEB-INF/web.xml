<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <resource-ref>
        <res-ref-name>jdbc/gdellapeProject</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

    <display-name>gdellapeProject</display-name>

    <!-- Init Servlet -->
    <welcome-file-list>
        <welcome-file>TemplateServlet</welcome-file>
    </welcome-file-list>
    <!-- Fine Init Servlet -->


    <!-- Servlet di esempio -->
    <servlet>
        <servlet-name>TemplateServlet</servlet-name>
        <servlet-class>controller.TemplateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TemplateServlet</servlet-name>
        <url-pattern>/TemplateServlet</url-pattern>
    </servlet-mapping>
    <!-- Fine Servlet di esempio -->

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>


    <!-- Servlet di login -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- Fine Servlet di login -->

    <!-- Servlet di logout -->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!-- Fine Servlet di logout -->

    <!-- Servlet di ProfileManager -->
    <servlet>
        <servlet-name>ProfileManagement</servlet-name>
        <servlet-class>controller.ProfileManagement</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileManagement</servlet-name>
        <url-pattern>/ProfileManagement</url-pattern>
        <url-pattern>/profileManagement</url-pattern>
    </servlet-mapping>
    <!-- Fine Servlet di ProfileManager -->

    <!-- Servlet di CreateUser -->
    <servlet>
        <servlet-name>CreateUser</servlet-name>
        <servlet-class>controller.CreateUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateUser</servlet-name>
        <url-pattern>/CreateUser</url-pattern>
        <url-pattern>/createUser</url-pattern>
    </servlet-mapping>
    <!-- Fine Servlet di CreateUser -->

    <!-- Servlet di AdmGetListUser -->
    <servlet>
        <servlet-name>AdmGetListUser</servlet-name>
        <servlet-class>controller.adm.AdmGetListUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdmGetListUser</servlet-name>
        <url-pattern>/AdmGetListUser</url-pattern>
        <url-pattern>/admGetListUser</url-pattern>
    </servlet-mapping>
    <!-- Fine Servlet di AdmGetListUser -->

    <!-- Servlet di AdmGetListUser -->
    <servlet>
        <servlet-name>AdmModUser</servlet-name>
        <servlet-class>controller.adm.AdmModUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdmModUser</servlet-name>
        <url-pattern>/AdmModUser</url-pattern>
        <url-pattern>/admModUser</url-pattern>
    </servlet-mapping>
    <!-- Fine Servlet di AdmGetListUser -->

    <!-- Servlet di AdmGetListGroups -->
    <servlet>
        <servlet-name>AdmGetListGroups</servlet-name>
        <servlet-class>controller.adm.AdmGetListGroups</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdmGetListGroups</servlet-name>
        <url-pattern>/AdmGetListGroups</url-pattern>
        <url-pattern>/admGetListGroups</url-pattern>
    </servlet-mapping>
    <!-- Fine Servlet di AdmGetListGroups -->


    <!-- Servlet di AdmModGroups -->
    <servlet>
        <servlet-name>AdmModGroups</servlet-name>
        <servlet-class>controller.adm.AdmModGroups</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdmModGroups</servlet-name>
        <url-pattern>/AdmModGroups</url-pattern>
        <url-pattern>/admModGroups</url-pattern>
    </servlet-mapping>
    <!-- Fine Servlet di AdmModGroups -->

</web-app>